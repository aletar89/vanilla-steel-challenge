// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Inventory {
  id                Int       @id @default(autoincrement())
  productNumber     String    @map("product_number")
  material         String
  form             String
  choice           String
  grade            String
  finish           String?
  surface          String?
  quantity         Int
  weight           Float     @map("weight_t")
  length           Float?    @map("length_mm")
  width            Float?    @map("width_mm")
  height           Float?    @map("height_mm")
  thickness        Float?    @map("thickness_mm")
  outerDiameter    Float?    @map("outer_diameter_mm")
  wallThickness    Float?    @map("wall_thickness_mm")
  webThickness     Float?    @map("web_thickness_mm")
  flangeThickness  Float?    @map("flange_thickness_mm")
  certificates     String?
  location         String?

  @@map("inventory")
} 